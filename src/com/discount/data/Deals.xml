<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Deals">
	
	<resultMap id="result" type="Deals">
	    <result property="id" column="id"/>
	    <result property="dealname" column="dealname"/>
	    <result property="merchantId" column="merchant_id"/>
	    <result property="dealInfos" column="deal_infos"/>
	    <result property="createAt" column="created_at"/>
    </resultMap>
	
    <select id="getAll" resultMap="result">
    	SELECT * FROM deals; 
    </select>
    
    <select id="getById" parameterType="int" resultMap="result">
    	SELECT * FROM deals WHERE id = #{id};
  	</select>
    
    <delete id="deleteById" parameterType="int">
    	DELETE from deals WHERE id = #{id};
    </delete>

    <insert id="insert" parameterType="Deals">
    INSERT INTO deals (dealname, merchant_id, deal_infos) 
		VALUES (#{dealname}, #{merchantId}, #{dealInfos});
      <selectKey keyProperty="id" resultType="int" order="AFTER">
		select last_insert_id() as id
	  </selectKey>
    </insert>

	<update id="update" parameterType="Deals">
	  	UPDATE deals
		SET
			dealname = #{dealname},
			merchant_id = #{merchantId},
			dealinfos = #{dealInfos},
		WHERE id = #{id};
	</update>

</mapper>