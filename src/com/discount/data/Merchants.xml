<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Merchants">
	
	<resultMap id="result" type="Merchants">
	    <result property="id" column="id"/>
	    <result property="merchantname" column="merchantname"/>
	    <result property="merchantInfos" column="merchant_infos"/>
	    <result property="location" column="location"/>
    </resultMap>
	
    <select id="getAll" resultMap="result">
    	SELECT * FROM merchants; 
    </select>
    
    <select id="getById" parameterType="int" resultMap="result">
    	SELECT * FROM merchants WHERE id = #{id};
  	</select>
    
    <delete id="deleteById" parameterType="int">
    	DELETE from merchants WHERE id = #{id};
    </delete>

    <insert id="insert" parameterType="Merchants">
    INSERT INTO merchants (merchantname, merchant_infos, location) 
		VALUES (#{merchantname}, #{merchantInfos}, #{location});
      <selectKey keyProperty="id" resultType="int" order="AFTER">
		select last_insert_id() as id
	  </selectKey>
    </insert>

	<update id="update" parameterType="Merchants">
	  	UPDATE merchants
		SET
			merchantname = #{merchantname},
			merhchant_infos = #{merchantInfos},
			location = #{location},
		WHERE id = #{id};
	</update>

</mapper>