<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Users">
	
	<resultMap id="result" type="Users">
	    <result property="id" column="id"/>
	    <result property="username" column="username"/>
	    <result property="password" column="password"/>
	    <result property="email" column="email"/>
	    <result property="location" column="location"/>
	    <result property="notifications" column="notifications"/>
	    <result property="followedMerchants" column="followed_merchants"/>
	    <result property="createAt" column="created_at"/>
    </resultMap>
	
    <select id="getAll" resultMap="result">
    	SELECT * FROM users; 
    </select>
    
    <select id="getById" parameterType="int" resultMap="result">
    	SELECT * FROM users WHERE id = #{id};
  	</select>
    
    <delete id="deleteById" parameterType="int">
    	DELETE from users WHERE id = #{id};
    </delete>

    <insert id="insert" parameterType="Users">
    INSERT INTO users (username, password, email, location, notifications, followed_merchants) 
		VALUES (#{username}, #{password}, #{email}, #{location}, #{notifications}, #{followedMerchants});
      <selectKey keyProperty="id" resultType="int" order="AFTER">
		select last_insert_id() as id
	  </selectKey>
    </insert>

	<update id="update" parameterType="Users">
	  	UPDATE users
		SET
			username = #{username},
			password = #{password},
			email = #{email},
			location = #{location},
			notifications = #{notifications},
			followed_merchants = #{followedMerchants}
		WHERE id = #{id};
	</update>

</mapper>