<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Users">
	
	<resultMap id="result" type="Users">
	    <result property="uId" column="u_id"/>
	    <result property="userName" column="user_name"/>
	    <result property="password" column="password"/>
	    <result property="email" column="email"/>
	    <result property="locationLong" column="location_long"/>
	    <result property="locationLat" column="location_lat"/>
	    <result property="notifications" column="notifications"/>
	    <result property="createAt" column="created_at"/>
    </resultMap>
	
    <select id="getAll" resultMap="result">
    	SELECT * FROM users; 
    </select>
    
    <select id="getById" parameterType="int" resultMap="result">
    	SELECT * FROM users WHERE u_id = #{uId};
  	</select>
    
    <delete id="deleteById" parameterType="int">
    	DELETE from users WHERE U_id = #{uId};
    </delete>

    <insert id="insert" parameterType="Users">
    INSERT INTO users (user_name, password, email, location_long, location_lat, notifications) 
		VALUES (#{userName}, #{password}, #{email}, #{locationLong}, #{locationLat},  #{notifications});
      <selectKey keyProperty="id" resultType="int" order="AFTER">
		select last_insert_id() as u_id
	  </selectKey>
    </insert>

	<update id="update" parameterType="Users">
	  	UPDATE users
		SET
			userName = #{user_name},
			password = #{password},
			email = #{email},
			locationLong = #{location_long},
			locationLat = #{location_lat},
			notifications = #{notifications},
		WHERE u_id = #{id};
	</update>

</mapper>